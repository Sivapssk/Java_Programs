public int[] buildArray(int[] nums) {
    ArrayList<Integer> al = new ArrayList<>();
    for (int i = 0; i < nums.length; i++) {
        int value = nums[nums[i]];
        al.add(value);
    }

    // Convert ArrayList to int[]
    int[] result = new int[al.size()];
    for (int i = 0; i < al.size(); i++) {
        result[i] = al.get(i);
    }

    return result;
}
