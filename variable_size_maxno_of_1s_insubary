import java.util.*;
class d{
    public static void main(String args[]){
      int l=0;
      int ar[]={0,1,3,1,1,6,7,1,0,1};
      int temp=0;
      int k=2;
      int res=0;
      int n=ar.length;
      for(int r=0;r<n;r++){
        if(ar[r]==1){
            temp++;
        }
        while(temp>k){
            if(ar[l]==1){
                temp=temp-1;
            }
            l++;
        }
        res=Math.max(temp,r-l+1);
      }
      System.out.println(res);
    }
}
